@model IEnumerable<JOB_FINDER.Models.APPLICATION>

@{
    ViewBag.Title = "Index";
}

<h2>My Applications</h2>

<table class="table">
    @if (Model.Count() == 0)
    {
        <h2>You haven't applied to any job yet!</h2>
    }

    else
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.POST.COMPANY.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.POST.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.POST.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.POST.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationDate)
            </th>
            <th></th>
        </tr>

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.POST.COMPANY.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.POST.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.POST.Experience)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.POST.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationDate)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ApplicationID })
                </td>
            </tr>
        }
    }

</table>