@model IEnumerable<JOB_FINDER.Models.RECOMMENDATION>

@{
    ViewBag.Title = "Index";
}

<h4>See the Recommendations of this user written by different companies</h4>

<table class="table text-left" style="font-size: 23px;">

    @if (Model.Count() == 0)
    {
        <h2>No recommendations yet!</h2>
    }
    else
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.COMPANY.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.USER.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecommendationDate)
            </th>
        </tr>
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.COMPANY.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.USER.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecommendationDate)
                </td>
            </tr>
        }
    }

</table>

