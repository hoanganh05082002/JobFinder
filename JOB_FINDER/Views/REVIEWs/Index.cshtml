@model IEnumerable<JOB_FINDER.Models.REVIEW>

@{
    ViewBag.Title = "Index";
}

<h2>See the Reviews of this company written by different users</h2>

<table class="table text-left" style="font-size: 23px;">

    @if (Model.Count() == 0)
    {
        <h2>No reviews yet!</h2>
    }
    else
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.COMPANY.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.USER.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewDate)
            </th>
        </tr>
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.COMPANY.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.USER.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewDate)
                </td>
            </tr>
        }
    }

</table>
